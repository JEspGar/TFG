<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">


<struts-config>
    <form-beans>
        <!--Bean para el formulario de inscripcion-->
        <form-bean name="registroForm" type="web.forms.registroForm"/>
        <form-bean name="dniForm" type="web.forms.dniForm"/>
        <form-bean name="asignaturasForm" type="web.forms.asignaturasForm"/>
        <form-bean name="titulacionForm" type="web.forms.titulacionForm"/>

    </form-beans>

    <global-exceptions>

    </global-exceptions>

    <global-forwards>
        <forward name="welcome" path="verTitulaciones.do" redirect="true"/>
        <forward name="registro_alumno" path="/registro_alumno.jsp"/>
        <forward name="principal" path="/index.jsp"/>
        <forward name="dni_alumno" path="/dni_alumno.jsp"/>
        <forward name="menu_administracion" path="/menu_index.jsp"/>
        <forward name="titulacion_form" path="/alta_titulacion.jsp"/>
    </global-forwards>

    <action-mappings>

        <action path="/listadoAsignaturas"
                type="web.actions.listadoAsignatura">
            <forward name="listado_index" path="/listado_alumnos.jsp"/>
            <forward name="error_listado_index" path="/error_listado_index.jsp"/>
        </action>

        <action path="/verTitulaciones"
                type="web.actions.verTitulaciones">
            <forward name="titulaciones_index" path="/titulaciones_index.jsp"/>
            <forward name="error_titulaciones_index" path="/error_titulaciones_index.jsp"/>
        </action>
        <!--Accion para registrar un alumno-->
        <action path="/registroAlumno"
                name="registroForm"
                scope="request"
                input="/registro_alumno.jsp"
                type="web.actions.registroAlumno">
            <forward name="alumno_inscrito" path="/alumno_inscrito.jsp"/>
            <forward name="error_alumno_inscrito" path="/error_alumno_inscrito.jsp"/>
        </action>

        <!--Accion para ver las inscripciones de un alumno-->
        <action path="/verInscripciones"
                name="dniForm"
                scope="request"
                input="/dni_alumno.jsp"
                type="web.actions.verInscripciones">
            <forward name="inscripciones_index" path="/inscripciones_index.jsp"/>
            <forward name="error_inscripciones_index" path="/error_inscripciones_index.jsp"/>
        </action>

        <action path="/correoConfirmacion"
                scope="request"
                type="web.actions.correoConfirmacion">
        </action>

        <action path="/opAsignaturas"
                scope="request"
                type="web.actions.opAsignaturas"
                parameter="operacion">
            <forward name="asignaturas_index" path="/asignaturas_index.jsp"/>
            <forward name="error_asignaturas_index" path="/error_asignaturas_index.jsp"/>
            <forward name="grupos_index" path="/grupos_index.jsp"/>
            <forward name="error_grupos_index" path="/error_grupos_index.jsp"/>
        </action> 
        
        <!-- <action path="/opAsignaturas"
        		name="asignaturasForm"
                scope="request"
                input="/contenido_titulaciones_index.jsp"
                type="web.actions.opAsignaturas"
                parameter="operacion">
            <forward name="asignaturas_index" path="/asignaturas_index.jsp"/>
            <forward name="error_asignaturas_index" path="/error_asignaturas_index.jsp"/>
            <forward name="grupos_index" path="/grupos_index.jsp"/>
            <forward name="error_grupos_index" path="/error_grupos_index.jsp"/>
        </action> -->

        <action path="/opListados"
                scope="request"
                type="web.actions.opListados"
                parameter="operacion">
            <forward name="asignaturasListado" path="/listadoasignaturas.jsp"/>
            <forward name="listadoGrupos" path="/listado_grupos.jsp"/>
            <forward name="listaGrupoIndividual" path="/listaGrupoIndividual.jsp"/>
            <forward name="error_listado_index" path="/error_listado_index.jsp"/>
            
            <!--
             <forward name="error_grupos_index" path="/error_grupos_index.jsp"/>
             -->
        </action>
       
        <action path="/listaGrupoIndividual"
                scope="request"
                input="/listaGrupoIndividual.jsp"
                type="web.actions.opListados">
                <forward name="" path="listaGrupoIndividual.jsp"/>
        </action>
        
        <!--Accion para registrar una asignatura-->
         <action path="/altaAsignatura"
                name="asignaturasForm"
                parameter="method"
                scope="request"
                input="/alta_asignatura.jsp"
                validate="false"
                type="web.actions.mantenimientoAsignatura">
            <forward name="asignatura_form" path="/alta_asignatura.jsp"/>
            <forward name="lista_titulaciones" path="/mantenimiento_asignatura_titulaciones.jsp"/>
        	<forward name="lista_asignaturas" path="/mantenimiento_asignatura_asignaturas.jsp"/>
            <forward name="error_creacion_asignatura" path="/error_creacion_asignatura.jsp"/>
            <forward name="asignatura_insertada" path="/asignatura_creada.jsp"/>
            <forward name="mantenimiento_form" path="/modificacion_asignatura.jsp"/>
            <forward name="asignatura_borrada" path="/asignatura_borrada.jsp"/>
            <forward name="asignatura_modificada" path="/asignatura_modificada.jsp"/>
            <forward name="error_titulaciones_index" path="/error_titulaciones_index.jsp"/>
        </action>
        
        <!--Accion para registrar una titulacion-->
         <action path="/mantenimientoTitulacion"
                name="titulacionForm"
                parameter="method"
                scope="request"
                input="/alta_titulacion.jsp"
                validate="false"
                type="web.actions.mantenimientoTitulacion">
            <forward name="lista_titulaciones" path="/mantenimiento_titulacion_titulaciones.jsp"/>
            <forward name="error_creacion_titulacion" path="/error_creacion_titulacion.jsp"/>
            <forward name="titulacion_insertada" path="/titulacion_creada.jsp"/>
            <forward name="mantenimiento_form" path="/modificacion_titulacion.jsp"/>
            <forward name="titulacion_borrada" path="/titulacion_borrada.jsp"/>
            <forward name="titulacion_modificada" path="/titulacion_modificada.jsp"/>
            <forward name="error_titulaciones_index" path="/error_titulaciones_index.jsp"/>
        </action>    


    </action-mappings>

    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <message-resources parameter="com/myapp/struts/ApplicationResource"/>


    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
        <set-property property="moduleAware" value="true" />
    </plug-in>

    <!-- ========================= Validator plugin ================================= -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
            property="pathnames"
            value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>

</struts-config>
